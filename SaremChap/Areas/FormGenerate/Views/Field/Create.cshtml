                            </div>
                            <div class="col-md-4">
                                @Html.EditorFor(model => model.DisabledField)
                                @Html.ValidationMessageFor(model => model.DisabledField)
                                <span>فیلد غیر فعال</span>
                            </div>

                        </div>

                    </div>


                </div>
            </div>

            <div class="dynamic-form">
                <a id="add" href="#">Add</a>
                |
                <a id="remove" href="#">Remove</a>
                |
                <a id="reset" href="#">Reset</a>
                <form>
                    <div class="inputs">
                        <div>
                            <input class="field" type="text" value="1" name="dynamic[]">
                        </div>
                    </div>
                    <input class="submit" type="button" value="Submit" name="submit">
                </form>
            </div>

            <script type="text/javascript">
                $(document).ready(function () {

                    var i = $('input').size() + 1;

                    $('#add').click(function () {
                        $('<div><input type="text" class="field" name="dynamic[]" value="' + i + '" /></div>').fadeIn('slow').appendTo('.inputs');
                        i++;
                    });

                    $('#remove').click(function () {
                        if (i > 1) {
                            $('.field:last').remove();
                            i--;
                        }
                    });

                    $('#reset').click(function () {
                        while (i > 2) {
                            $('.field:last').remove();
                            i--;
                        }
                    });

                    // here's our click function for when the forms submitted

                    $('.submit').click(function () {

                        var answers = [];
                        $.each($('.field'), function () {
                            answers.push($(this).val());
                        });

                        if (answers.length == 0) {
                            answers = "none";
                        }
                        var BODY = {
                            "recipients": {
                                "values": []
                            },
                            "subject": 'TitleOfSubject',
                            "body": 'This is the message body.'
                        }

                        var values = [], names = answers;
                        for (var ln = 0; ln < names.length; ln++) {
                            var item1 = {
                                "person": { "_path": "/people/" + names[ln] }
                            };
                            values.push(item1);
                        }
                        $.extend(BODY.recipients.values, values);
                        console.log(BODY);
                        alert(answers);

                        return false;

                    });

                });
            </script>

