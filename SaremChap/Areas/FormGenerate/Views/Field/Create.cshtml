<script>

    $('#EffectivePrice').change(
        function () {
            if ($("#EffectivePrice").is(':checked')) {
                $('#finance').show();
        
            } else {
                $('#finance').hide();
            }
        });

    $('#fieldtype').change(
        function () {

            if ($(this).val() == 1) {
                $('#optionField').show();
            }
            else if ($(this).val() == 7) {
                $('#optionField').show();
            } else {
                $('#optionField').hide();
            }
        });

    $('#tags_1').tagsInput({ width: 'auto' });
</script>
