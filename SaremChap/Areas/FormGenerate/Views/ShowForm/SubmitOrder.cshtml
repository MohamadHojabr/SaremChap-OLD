
@model Domainclasses.Modes.Order

@{
    ViewBag.Title = "ثبت اطلاعات سفارش دهنده";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/plugins/jquery.validetta/validetta.css" rel="stylesheet" />
<script src="~/Content/plugins/jquery.validetta/validetta.min.js"></script>
<script src="~/Content/plugins/jquery.validetta/validettaLang-fa-IR.js"></script>


<div class="call-action call-action-boxed call-action-style2 clearfix text-right">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <input type="hidden" name="SubmitFormId" value="@ViewBag.FormSubmitId" />
    <div class="form-horizontal">
        @Html.ValidationSummary(true)

        <div class="form-group">
            
            <div class="col-md-5 col-md-offset-7">
                @Html.TextBoxFor(model => model.FirstName, new { @class = "  form-control text-right", @placeholder = "نام" })
                @Html.ValidationMessageFor(model => model.FirstName)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-5 col-md-offset-7">
                @Html.TextBoxFor(model => model.LastName, new { @class = "  form-control text-right", @placeholder = "نام خوانوادگی" })
                @Html.ValidationMessageFor(model => model.LastName)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-5 col-md-offset-7">
                @Html.TextBoxFor(model => model.Address, new { @class = "  form-control text-right", @placeholder = "آدرس" })
                @Html.ValidationMessageFor(model => model.Address)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-5 col-md-offset-7">
                @Html.TextBoxFor(model => model.PostalCode, new { @class = "  form-control text-right", @placeholder = "کد پستی" })
                @Html.ValidationMessageFor(model => model.PostalCode)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-5 col-md-offset-7">
                @Html.TextBoxFor(model => model.Phone, new { @class = "  form-control text-right", @placeholder = "تلفن" })
                @Html.ValidationMessageFor(model => model.Phone)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-5 col-md-offset-7">
                @Html.TextBoxFor(model => model.Mobile, new { @class = "  form-control text-right", @placeholder = "تلفن همراه" })
                @Html.ValidationMessageFor(model => model.Mobile)
            </div>
        </div>

        <div class="form-group">
            @*<div class="col-md-7"></div>*@

            <div class="col-md-5 col-md-offset-7 col-md-offset-7">
                @Html.TextBoxFor(model => model.Email, new { @class = "  form-control text-right", @placeholder = "پست الکترونیکی" })
                @Html.ValidationMessageFor(model => model.Email)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-5 col-md-offset-7">
                <input type="submit" value="ثبت مشخصات" class="submitclick" />
            </div>
        </div>
    </div>
    }
</div>

<script>
    $(document).ready(function () {
        $("form").validetta();
    })
    $('input').attr('data-validetta', 'required');
    $('textarea').attr('data-validetta', 'required');
    $('select').attr('data-validetta', 'required');
    $("select").addClass("form-control")

</script>

