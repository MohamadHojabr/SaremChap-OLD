@model Domainclasses.Modes.ProductCategory

@{
    ViewBag.Title = Model.name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}


    
    <div class="page-banner" style="padding:40px 0; background: url(/Content/images/slide-02-bg.jpg) center #f9f9f9;">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <td>
                        @if (Model.ProductCategoryFileses.Count == 0)
                        {

                            <img width="100" class="img-thumbnail" src="~/Content/images/image-not-found.jpg" alt="sarem chap | چاپ صارم " />
                        }
                        else
                        {
                            foreach (var file in Model.ProductCategoryFileses)
                            {

                                var url = string.Format("/images/Services/productCategory/{0}", file.FileName);
                                <div>
                                    <img width="200" class="img-thumbnail" src=@url alt="@file.FileName" />
                                </div>
                            }

                        }
                    </td>
                </div>
                <div class="col-md-8" style="text-align:right">
                    <h1>@Model.name</h1>
                    <p>@Html.Raw(System.Web.HttpUtility.HtmlDecode(@Model.describtion))</p>
                </div>
               
            </div>
        </div>
    </div>
    <br /><br />
    <div class="container" style="text-align:right">

        @foreach (var p in @Model.Product)
        {
            <div class="call-action call-action-boxed call-action-style1 clearfix">
                <div class="row">

                    <div class="col-md-4">
                        @if (p.Files.Count == 0)
                        {

                            <img width="100" class="img-thumbnail" src="~/Content/images/image-not-found.jpg" alt="sarem chap | چاپ صارم " />
                        }
                        else
                        {
                            foreach (var file in p.Files)
                            {

                                var url = string.Format("/images/Services/service/{0}", file.FileName);
                                <div>
                                    <img class="img-thumbnail" src=@url alt="@file.FileName" />
                                </div>
                            }

                        }

                        <table cellspacing="1" class="table table-striped text-center" style="margin-top:50px">
                            <tr>
                                @if (p.Price.Count==0)
                                {
                                <th style="text-align:center"><p>قیمتی ثبت نشده است</p></th>
                                }
                                else
                                {
                                foreach (var price in p.Price)
                                {                                   
                                        <th style="text-align:center">@price.neme</th>
                                }

                                }

                            </tr>

                            <tr>
                                @foreach (var price in p.Price)
                                {
                                    <td style="background:#8f59d4; color:#f9f9f9; font-weight:bold">@price.value.ToString("0.#####")</td>

                                }
                            </tr>

                        </table>
                      
                        <a href="/FormGenerate/ShowForm/ShowForm/@p.ProductID" class="btn-system border-btn btn-large btn-purple"> <i class="fa fa-shopping-cart"></i>  ثبت سفارش</a>
                    </div>

                    <div class="col-md-8">
                        <h4>@Html.DisplayFor(modelItem => p.name)</h4>
                        <br />
                        <p style="direction:rtl">@Html.Raw(System.Web.HttpUtility.HtmlDecode(p.describtion))</p>
                    </div>
                </div>
            </div>
            <br />
        }
    </div>

@section TagMeta{
  
        @Model.SuperCategory.ToString()<text>,</text>
  


}

@section ContentMeta{
  
        @Model.describtion<text>.</text>
   
}

@section AuthorMeta{
    گروه صنعتی چاپ صارم ارائه دهنده خدمات نوین چاپ
}




