

@model Domainclasses.Modes.ProductCategory
<div class="call-action call-action-boxed call-action-style2 clearfix text-right">
    @using (Html.BeginForm("Create", "ProductCategory", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div class="row">

            @Html.ValidationSummary(true)
            <div class="col-md-4">
                <input class="file-upload" type="file" id="Photo" name="upload" />
            </div>
            <div class="col-md-4">

                @Html.EnumDropDownListFor(model => model.SuperCategory, "--انتخاب کنید--", new { @class = "form-control", style = "text-align:right" })
                @Html.ValidationMessageFor(model => model.SuperCategory)
            </div>

                <div class="col-md-4">
                    @Html.TextBoxFor(model => model.name, new { @class = "form-control", placeholder = "نام گروه", style = "text-align:right" })
                    @Html.ValidationMessageFor(model => model.name)
                </div>



        </div>



              <div class="form-group" style="text-align:right">
                <div class="row">
                    <div class="col-md-12">
                        <div class="row" id="optionField">
                            <div class="col-md-10 input-group">

                                @Html.TextBoxFor(model => model.Tags, new { @class = " form-control tags", id = "tags" })
                                @Html.ValidationMessageFor(model => model.Tags)


                            </div>
                            <div class="col-md-2">
                                <span>  کلید واژه  </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>




        <div class="form-group">
            <div class="col-md-12">
                @Html.TextAreaFor(model => model.describtion, new { @class = "form-control", placeholder = "توضاحات", style = "text-align:right", id = "Content" })
                @Html.ValidationMessageFor(model => model.describtion)
            </div>

        </div>

        <hr />
        <div class="form-group">
            <div class="col-md-12">
                <input type="submit" value="  ثبت  " class="btn-system btn-large" />
            </div>
        </div>


    }

</div>
<script src="~/Content/plugins/ckeditor/ckeditor.js"></script>

<script>
    if (CKEDITOR.env.ie && CKEDITOR.env.version < 9)
        CKEDITOR.tools.enableHtml5Elements(document);
    CKEDITOR.config.height = 150;
    CKEDITOR.config.width = 'auto';
    CKEDITOR.config.language = 'fa';
    CKEDITOR.config.skin = 'office2013';
    var initSample = (function () {
        var wysiwygareaAvailable = isWysiwygareaAvailable(),
            isBBCodeBuiltIn = !!CKEDITOR.plugins.get('bbcode');

        return function () {
            var editorElement = CKEDITOR.document.getById('Content');

            if (wysiwygareaAvailable) {
                CKEDITOR.replace('Content');
            } else {
                editorElement.setAttribute('contenteditable', 'true');
                CKEDITOR.inline('Content');
            }
        };

        function isWysiwygareaAvailable() {
            if (CKEDITOR.revision == ('%RE' + 'V%')) {
                return true;
            }

            return !!CKEDITOR.plugins.get('wysiwygarea');
        }
    })();

    initSample();
</script>

<script>
    $(document).ready(function () {
        $("form").validetta();
    })
    $('input').attr('data-validetta', 'required');
    $('textarea').attr('data-validetta', 'required');
    $('select').attr('data-validetta', 'required');
    $("select").addClass("form-control")


    $("#preview-image").click(function () {
        $("#imagelist").fadeToggle();
    })

    $(".upload-btn").click(function (e) {
        var urlParam = $(this).data('url');

        $.ajax({

            //مشخص کردن  اکشنی که باید فراخوانی شود

            url: urlParam,
            contentType: 'application/html; charset=utf-8',
            type: 'GET',
            //نوع نتیجه بازگشتی
            dataType: 'html'

        })
.success(function (result) {
    //زمانی که کدهای سمت سرور بدون خطا اجرا شده اند
    //این قسمت فراخوانی می‌شود و نتیجه اکشن درون متغیر
    //result
    //قرار می‌گیرد
    $('#uploadSection').html(result);
})
.error(function (xhr, status) {
    alert(xhr.responseText);
});
    });

    $('#tags').tagsInput({ width: 'auto' });

</script>
