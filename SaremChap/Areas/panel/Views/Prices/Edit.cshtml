@model Domainclasses.Modes.Price

<div class="call-action call-action-boxed call-action-style2 clearfix text-right">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            

            @Html.ValidationSummary(true)
            @Html.HiddenFor(model => model.priceID)

            <div class="form-group">
                <div class="row">
                    <div class="col-md-4"></div>

                    <div class="col-md-6">
                        @Html.DropDownList("ProductID", String.Empty)
                        @Html.ValidationMessageFor(model => model.ProductID)
                    </div>
                    <div class="col-md-2">
                        <p>محصول</p>
                    </div>

                </div>
            </div>

            <div class="form-group text-right">
                <div class="row">
                    <div class="col-md-4"></div>

                    <div class="col-md-6">
                        @Html.TextBoxFor(model => model.neme, new {@class="form-control text-right" })
                        @Html.ValidationMessageFor(model => model.neme)
                    </div>
                    <div class="col-md-2">
                       نوع
                    </div>
                </div>
            </div>

            <div class="form-group text-right">
                <div class="row">
                    <div class="col-md-4"></div>

                    <div class="col-md-6">
                       <input type="number" id="Quantity" name="Quantity" class="form-control" value="@Model.Quantity"/>
                        @Html.ValidationMessageFor(model => model.neme)
                    </div>
                    <div class="col-md-2">
                        مقدار
                    </div>
                </div>
            </div>

            <div class="form-group text-right">
                <div class="row">
                    <div class="col-md-4"></div>

                    <div class="col-md-6">
                        @Html.TextBoxFor(model => model.value, new { @class = "form-control text-right" })
                        @Html.ValidationMessageFor(model => model.value)
                    </div>
                    <div class="col-md-2">
                        قیمت 
                    </div>
                </div>
            </div>


            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="  ثبت  " class="submitclick" />
                </div>
            </div>
        </div>
    }

</div>

<script>
    $(document).ready(function () {
        $("form").validetta();
    })
    $('input').attr('data-validetta', 'required');
    $('textarea').attr('data-validetta', 'required');
    $('select').attr('data-validetta', 'required');
    $("select").addClass("form-control")

</script>