@model PagedList.IPagedList<Domainclasses.Modes.Product>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

@{
    ViewBag.Title = "لیست محصولات و خدمات";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@section Sidebar{
    محصولات
}

<p>
    <a class="jq-btn" data-url="/panel/Product/Create" href="#" data-toggle="modal" data-target=".bs-example-modal-lg">ایجاد محصول جدید</a>
</p>
<table class="table table-bordered" style="direction:rtl">
    <tr>
        <th style="text-align:center">
            @Html.DisplayNameFor(model => model.First().ProductCategory.name)
        </th>

        <th style="text-align:center">
            @Html.DisplayNameFor(model => model.First().name)
        </th>
        <th style="text-align: center">

           تصویر محصول
        </th>
        <th style="text-align: center">
            @Html.DisplayNameFor(model => model.First().describtion)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr style="text-align:center">
            <td>
                @Html.DisplayFor(modelItem => item.ProductCategory.name)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @if (item.Files.Count == 0)
                {

                    <img width="100" class="img-thumbnail" src="~/Content/images/image-not-found.jpg"  alt="sarem chap | چاپ صارم "/>
                }
                else
                {
                    foreach (var file in item.Files)
                    {

                        var url = string.Format("/images/Services/service/{0}", file.FileName);
                        <div>
                            <img width="100" class="img-thumbnail" src=@url alt="@file.FileName" />
                        </div>
                    }

                }
            </td>
            <td>
                @{
        var trunc = Html.Raw(System.Web.HttpUtility.HtmlDecode(item.describtion));


                }


                @Truncate.TruncateString(trunc.ToString(), 150)

            </td>
            <td>
                <a class="jq-btn" data-url="/panel/Product/Edit/@item.ProductID" href="#" data-toggle="modal" data-target=".bs-example-modal-lg">اصلاح</a> |
                <a class="jq-btn" data-url="/panel/Product/Details/@item.ProductID" href="#" data-toggle="modal" data-target=".bs-example-modal-lg">جزئیات</a> |
                <a class="jq-btn" data-url="/panel/Product/Delete/@item.ProductID" href="#" data-toggle="modal" data-target=".bs-example-modal-lg">حذف</a>
            </td>
        </tr>
    }

</table>

<br />
صفحه @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) از @Model.PageCount

@Html.PagedListPager(Model, page => Url.Action("index",
    new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))



