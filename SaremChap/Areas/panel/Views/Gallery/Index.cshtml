@model PagedList.IPagedList<Domainclasses.Modes.Gallery>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

@{
    ViewBag.Title = "ایجاد گالری تصاویر";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@section Sidebar{
    ایجاد گالری تصاویر 
}


<p>
    <a class="jq-btn" data-url="/panel/Gallery/Create" href="#" data-toggle="modal" data-target=".bs-example-modal-lg">ایجاد گالری جدید</a>
</p>
<table class="table table-bordered" style="direction:rtl">
    <tr>
        <th style="text-align:center">
            @Html.DisplayNameFor(model => model.First().GalleryId)
        </th>
        <th style="text-align:center">
            @Html.DisplayNameFor(model => model.First().name)
        </th>
        <th style="text-align:center">
            @Html.DisplayNameFor(model => model.First().describtion)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
{
    <tr style="text-align:center">
        <td>
            @Html.DisplayFor(modelItem => item.GalleryId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            @Truncate.TruncateString(item.describtion, 150)
        </td>
        <td>
            <a class="jq-btn" data-url="/panel/Gallery/Edit/@item.GalleryId" href="#" data-toggle="modal" data-target=".bs-example-modal-lg">اصلاح</a> |
            <a class="jq-btn" data-url="/panel/Gallery/Details/@item.GalleryId" href="#" data-toggle="modal" data-target=".bs-example-modal-lg">جزئیات</a> |
            <a class="jq-btn" data-url="/panel/Gallery/Delete/@item.GalleryId" href="#" data-toggle="modal" data-target=".bs-example-modal-lg">حذف</a>
        </td>
    </tr>
}

</table>

<br />
صفحه @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) از @Model.PageCount

@Html.PagedListPager(Model, page => Url.Action("index",
    new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))
