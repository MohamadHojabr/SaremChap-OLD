@model Domainclasses.Modes.GalleryItem

<div class="call-action call-action-boxed call-action-style2 clearfix text-right">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal" style="direction:rtl">
            @Html.ValidationSummary(true)
            <div class="row">




                <div class="form-group" style="text-align:right">
                    <div class="col-md-10">
                        @Html.DropDownList("GalleryId", String.Empty)
                        @Html.ValidationMessageFor(model => model.GalleryId)
                    </div>
                    @Html.LabelFor(model => model.GalleryId, "گالری", new { @class = "control-label col-md-2" })
                </div>

                <div class="form-group">
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.name, new { @class = "form-control", placeholder = "نام", style = "text-align:right" })
                        @Html.ValidationMessageFor(model => model.name)
                    </div>
                    @Html.LabelFor(model => model.name, new { @class = "control-label col-md-2" })


                </div>

                <div class="form-group">
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.describtion, new { @class = "form-control", placeholder = "توضیحات", style = "text-align:right" })
                        @Html.ValidationMessageFor(model => model.describtion)
                    </div>
                    @Html.LabelFor(model => model.describtion, new { @class = "control-label col-md-2" })
                </div>


                <div class="form-group">
                    <div class="col-md-10">
                        <div class="input-group">
                            <img class="img-thumbnail" id="preview-image" src="/Content/images/icon/camera.png" width="128" style="cursor:pointer"/>
                            <input type="hidden" class="image" id="url" name="url" />
                        </div>
                         @Html.ValidationMessageFor(model => model.url)
                    </div>

                </div>
            </div>


            <div class="form-group">
                <div class="col-md-12">
                    <input type="submit" value="  ثبت  " class="btn-system btn-large" />
                </div>
            </div>
        </div>
    }

    <div id="imagelist" style="display:none">
        @{Html.RenderAction("imageList", "GalleryItem", new { Area = "panel" });}
    </div>

</div>

<script>
    $("#preview-image").click(function () {
        $("#imagelist").fadeToggle();
    })

    $(document).ready(function () {
        $("form").validetta();
    })
    $('input').attr('data-validetta', 'required');
    $('textarea').attr('data-validetta', 'required');
    $('select').attr('data-validetta', 'required');
    $("select").addClass("form-control")

</script>