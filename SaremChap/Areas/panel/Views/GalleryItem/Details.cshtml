@model Domainclasses.Modes.GalleryItem
<div class="call-action call-action-boxed call-action-style2 clearfix text-right">

    <div class="row">

        <div class="col-md-3">
            @{
                var url = string.Format("/images/Services/gallery/{0}", Model.FileName);

            }
            <img src="@url" class="img-thumbnail" width="200" alt="@Model.name"/>

        </div>
        <div class="col-md-9">
            <h3>@Html.DisplayFor(model => model.name)</h3>
            <br />
            <h5> گروه : @Html.DisplayFor(model => model.Gallery.name)</h5>

            <p style="direction:rtl">
                @Html.Raw(System.Web.HttpUtility.HtmlDecode(Model.describtion))
            </p>
        </div>

    </div>
</div>
