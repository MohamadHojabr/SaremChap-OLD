@model Domainclasses.Modes.Subject

<div class="call-action call-action-boxed call-action-style2 clearfix text-right">

    <div class="row">
        <div class="col-md-4">
<img src="@Model.SubjectImage" class="img-thumbnail" alt="@Model.SubjectLead" width="300"/>
        </div>
        <div class="col-md-8 text-right" style="direction:rtl">
            <h3>@Model.SubjectLead</h3>
            <ul style="float:right">
                <li>گروه : @Model.Chapter.Name</li>
                <li>نویسنده : @Model.Authors</li>
                <li>تاریخ : @Model.SubjectDate</li>
            </ul>
            <p>
                @Html.Raw(System.Web.HttpUtility.HtmlDecode(Model.SubjectContent))
            </p>
        </div>
    </div>

</div>

