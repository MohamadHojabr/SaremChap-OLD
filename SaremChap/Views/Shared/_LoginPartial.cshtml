@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "/Account",null, FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="contact-details">
        <li>
            @Html.ActionLink(" خوش آمدید " + User.Identity.GetUserName() + "!", "Controlpanel", "home", routeValues: null, htmlAttributes: new { title = "Manage"})
        </li>
        <li>
            <a href="javascript:document.getElementById('logoutForm').submit()">  خروج  </a>
        </li>
    </ul>
    }
}
else
{
    <ul class="contact-details">
        <li><a href="/Account/Register" id="registerLink">ثبت نام</a></li>
        @*<li>@Html.ActionLink("ثبت نام", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink"})</li> |*@
        @*<li>@Html.ActionLink("ورود", "Login", "Account", null, htmlAttributes: new { id = "loginLink"})</li> |*@
        <li><a href="/Account/Login" id="loginLink">ورود</a></li>
    </ul>
}
