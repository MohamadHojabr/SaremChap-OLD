@{
    ViewBag.Title = "   مدیریت تصاویر   ";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="jumbotron">
    <form action="~/Home/SaveUploadedFile" method="post" enctype="multipart/form-data" class="dropzone" id="dropzoneForm" style="background: none; border: dashed medium #808080;">
        <div class="fallback">
            <input name="file" type="file" multiple />
            <input type="submit" value="Upload" />
        </div>
    </form>
</div>
<div class="col-md-12">
    <div id="imageList-container"></div>
</div>

<script>
    //File Upload response from the server
    Dropzone.options.dropzoneForm = {
        addRemoveLinks: true,
        maxFiles: 1,
        clickable: true,
        enqueueForUpload: true,
        thumbnailWidth: "250",
        thumbnailHeight: "250",
        accept: function (file, done) {
            console.log("uploaded");
            done();
        },

        init: function () {

            this.on("success", function (file) {
              
                $.ajax({

                    url: "/home/imageList",
                    contentType: 'application/html; charset=utf-8',
                    type: 'GET',
                    dataType: 'html'

                })
                 .success(function (result) {

                     $('#imageList-container').html(result).fadeIn();


                 })
            });

            this.on("addedfile", function (file) {

                file.previewElement.addEventListener("click", function () {

                });

            });


        }

    };

    $(document).ready(function () {
        $.ajax({

            url: "/home/imageList",
            contentType: 'application/html; charset=utf-8',
            type: 'GET',
            dataType: 'html'

        })
                 .success(function (result) {

                     $('#imageList-container').html(result).fadeIn();


                 })
    });




</script>

<style>
    #dropZone {
        background: gray;
        border: black dashed 3px;
        width: 100%;
        height: 100px;
        padding: 20px;
        text-align: center;
        color: white;
    }
</style>

